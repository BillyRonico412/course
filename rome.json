{
	"$schema": "https://docs.rome.tools/schemas/12.1.3/schema.json",
	"organizeImports": {
		"enabled": false
	},
	"linter": {
		"enabled": true,
		"rules": {
			"all": true,
			"correctness": {
				"all": true,
				"noUndeclaredVariables": "off"
			},
			"nursery": {
				"all": true
			},
			"a11y": {
				"all": true,
				"useKeyWithClickEvents": "off",
				"useButtonType": "off"
			}
		}
	},
	"javascript": {
		"formatter": {
			"semicolons": "asNeeded"
		}
	}
}